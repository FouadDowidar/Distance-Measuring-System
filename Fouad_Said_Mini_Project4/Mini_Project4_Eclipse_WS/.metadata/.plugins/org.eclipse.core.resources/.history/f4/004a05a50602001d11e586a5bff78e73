/******************************************************************************
 *
 * Module: UltraSonic sensor
 *
 * File Name: ultrasonic.c
 *
 * Description: Source file for the UltraSonic sensor
 *
 * Author: Fouad Dowidar
 *
 *******************************************************************************/

#include "icu.h"
#include "ultrasonic.h"
#include "gpio.h"
#include "util/delay.h"

/*******************************************************************************
 *                           Global Variables                                  *
 *******************************************************************************/

/* (g_timerValue variable) to store time for high value in echo pin */

static uint8 g_edgeCount = 0;
static uint16 g_timerValue = 0;

/*******************************************************************************
 *                      Functions Definitions                                  *
 *******************************************************************************/

/* Description : function responsible for initialization of ultrasonic
 * Initialize the ICU driver as required.
 * Setup the ICU call back function.
 * Setup the direction for the trigger pin as output pin through the GPIO driver
 */

void Ultrasonic_init(void)
{

	/*  initialize the ICU */
	Icu_ConfigType Config_Ptr = {F_CPU_8,RISING};
	Icu_init(&Config_Ptr);

	/* set call back function so (ICU driver)lower layer can call it */
	Icu_setCallBack(Ultrasonic_edgeProcessing);

	/* setup direction of trigger pin as OUTPUT
	 * initialize the pin by set it to LOW
	 */
	GPIO_setupPinDirection(TRIGGER_PORT_ID,TRIGGER_PIN_ID,PIN_OUTPUT);
	GPIO_writePin(TRIGGER_PORT_ID,TRIGGER_PIN_ID,LOGIC_LOW);

	/* no need to setup direction of echo pin as Icu_init() do that	 */
}

/* Description
 * Send the Trigger pulse to the ultrasonic.
 */

void Ultrasonic_Trigger(void)
{

	GPIO_writePin(TRIGGER_PORT_ID,TRIGGER_PIN_ID,LOGIC_HIGH);

	_delay_us(TRIGGER_PULSE);

	GPIO_writePin(TRIGGER_PORT_ID,TRIGGER_PIN_ID,LOGIC_LOW);

}

/* Description : function responsible for reading distance using ultrasonic.
 * Send the trigger pulse by using Ultrasonic_Trigger function.
 * Start the measurements by the ICU from this moment.
 * Return: The measured distance in Centimeter.
 */

uint16 Ultrasonic_readDistance(void)
{
	/* Send the trigger pulse to ultrasonic trigger pin by using Ultrasonic_Trigger function.
	 * At this this moment the measurements is started by the ICU .
	 */
	Ultrasonic_Trigger();

	/* Sound velocity = 340.00 m/s = 34000 cm/s
	 * The distance of Object (in cm) = (34000*Time)/2 = 17000 * Time
	 *
	 * Total distance is divided by 2 because signal travels from HC-SR04 to object and returns to the module HC-SR-04.
	 *
	 * We have selected an internal 8MHz oscillator frequency for ATmega16, with Prescaler F_CPU/8 for timer frequency.
	 * Then time to execute 1 instruction is 1 us.So, the timer gets incremented after 1 us time elapse
	 * Distance:
							= 17000 x (TIMER value) x 1 x 10^-6 cm
							= 0.017 x (TIMER value) cm
							= (TIMER value) / 58.8 cm
	 */

	return (g_timerValue*0.0174);

}

/* Description
 * This is the call back function called by the ICU driver.
 * This is used to calculate the high time (pulse time) generated by
 * the ultrasonic sensor.
 */

void Ultrasonic_edgeProcessing(void)
{
	g_edgeCount++;
	if(g_edgeCount == 1)
	{
		/*
		 * Clear the timer counter register to start measurements from the
		 * first detected rising edge
		 */
		Icu_clearTimerValue();
		/* Detect falling edge */
		Icu_setEdgeDetectionType(FALLING);
	}
	else if(g_edgeCount == 2)
	{
		/* Store the High time value */
		g_timerValue = Icu_getInputCaptureValue();

		/* Detect rising edge */
		Icu_setEdgeDetectionType(RISING);

		g_edgeCount = 0;
	}
}
